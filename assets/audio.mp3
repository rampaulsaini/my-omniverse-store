<script>
// === Íô∞ Live Audio Path Auto-Connect ===
async function findAudio(){
  // ‡§™‡§π‡§≤‡•á primary path
  const paths = ['assets/audio.mp3','docs/assets/audio.mp3'];
  for (const p of paths){
    try{
      const r = await fetch(p,{method:'HEAD'});
      if(r.ok){
        console.log('‚úÖ Found audio at',p);
        return p;
      }
    }catch(e){ /* ignore */ }
  }
  console.warn('‚ùå Audio not found in known paths');
  return null;
}

(async()=>{
  const found = await findAudio();
  if(!found) return;
  const audio = new Audio(found);
  audio.controls = true;
  document.body.appendChild(audio);
  audio.addEventListener('canplaythrough',()=>{
    console.log('üéß Ready to play live audio:',found);
  });
})();
</script>
