<script>
(async function(){
  const path = 'assets/audio.mp3'; // or 'docs/assets/audio.mp3' if needed
  console.log("Checking:", path);
  try {
    const head = await fetch(path, { method: 'HEAD' });
    console.log('HEAD status:', head.status, head.ok);
    for (const [k,v] of head.headers.entries()) {
      console.log('H:', k, v);
    }
  } catch(e){
    console.error('HEAD fetch failed:', e);
  }

  const audio = new Audio(path);
  audio.controls = true;
  document.body.appendChild(audio);

  audio.addEventListener('error', function(ev){
    const err = audio.error;
    console.error('Audio element error event:', ev);
    console.error('MediaError code:', err ? err.code : 'none', ' message:', err ? err.message : 'none');
  });

  // try to decode via WebAudio to get decode errors
  try {
    const r = await fetch(path);
    const ab = await r.arrayBuffer();
    const ctx = new (window.AudioContext || window.webkitAudioContext)();
    ctx.decodeAudioData(ab, function(buf){
      console.log('✅ decodeAudioData success. duration:', buf.duration);
    }, function(err){
      console.error('❌ decodeAudioData failed:', err);
    });
  } catch(e){
    console.error('Fetch/Decode failed:', e);
  }
})();
</script>
